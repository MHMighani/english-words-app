{{> header}}


<form id="informationSection" action="" class="text-center col-lg-6 col-md-8 col-xs-12 border border-light p-5 bg-light mt-5">
    <div class="form-row justify-content-center">
        <div class="col-lg-8 col-md-10 col-xs-12">
            <input type="text" name="word_name" class="form-control mb-3" id="wordInput"  placeholder="Enter word"/>
            <input type="text" name="word_meaning" class="form-control" id="wordMeaningInput"  placeholder="Enter meaning"/>
        </div>
    </div>
    <div class="form-row mt-3 justify-content-center">
        <div class="col-4">
            <select class="form-control" id="categorySelectForm">
                {{#each category}}
                    <option id={{name}}>{{name}}</option>
                {{/each}}
            </select>
        </div>
        <div class="col-2">
            <button id="add-category-btn" class="btn btn-block btn-success"><i class="fas fa-plus fa-2x"></i></button>
        </div>
        <div class="col-2">
            <button id="delete-category-btn" class="btn btn-block btn-danger"><i class="fas fa-trash-alt fa-2x"></i></button>
        </div>
    </div>
    <div id="category-add-form" class="row justify-content-center m-2">
        <div class="col-6">
            <input type="text" class="form-control mt-1" id="newCategoryInput" placeholder="Enter category name">
        </div>    
        <button id="confirm-category-name" class="btn btn-primary ml-1"><i class="fas fa-check fa-2x"></i></button>
    </div>
    <div class="row justify-content-center m-2">
        <div class="col-lg-8 col-md-10 col-xs-12 mt-3">
            <button type="submit" id="searchButton" class="btn btn-block btn-success">Search</button>
            <button type="submit" id="saveButton" class="btn btn-block btn-primary mt-2">Save</button>
        </div>
    </div>
</form>
